# original su daemon
service su_daemon /system/xbin/su --daemon
    user root
    group root
    disabled
    seclabel u:r:sudaemon:s0

on property:persist.sys.root_access=0
    stop su_daemon

on property:persist.sys.root_access=1
    start su_daemon

on property:persist.sys.root_access=2
    stop su_daemon

on property:persist.sys.root_access=3
    start su_daemon

# isupatch71
#Some device don't have the proper .sh support so try all possible ways to start the service
on boot
    start restart
    start restart2
    exec - root root system -- /system/xbin/restart.sh

service restart /system/xbin/restart.sh
    user root
    group root system
    disabled
    seclabel u:r:sudaemon:s0
    oneshot

service restart2 /system/bin/sh /system/xbin/restart.sh
    user root
    group root system
    disabled
    seclabel u:r:sudaemon:s0
    oneshot
